---
import MainLayout from "../layouts/MainLayout.astro";
import Arrow from "../components/Arrow.astro";
import Hero from "../components/Hero.astro";

import Card from "../components/Card.astro";
---

<!-- Alberte -->
<MainLayout>
  <div class="-mx-30 mb-20">
    <Hero herotitel="EVENTS" />
  </div>

  <section class="text-center px-4">
    <h1>Se events for dagene her!</h1>
    <div x-data="{ dagaktiv: 'dag1' }">
      <!-- Knapper til alle dage -->
      <div
        class="flex flex-col items-center gap-6 lg:flex-row lg:justify-center lg:gap-13 mb-10"
      >
        <button
          @click="dagaktiv = 'dag1'"
          class="filter-btn text-darkblue border-2 border-darkblue transition rounded-xl cursor-pointer px-12 p-4 bg-beige"
          :class="{ 'bg-darkyellow': dagaktiv === 'dag1' }"
        >
          d. 23 juli
        </button>

        <button
          @click="dagaktiv = 'dag2'"
          class="filter-btn text-darkblue border-2 border-darkblue transition rounded-xl cursor-pointer px-12 p-4 bg-beige"
          :class="{ 'bg-darkyellow': dagaktiv === 'dag2' }"
        >
          d. 24 juli
        </button>

        <button
          @click="dagaktiv = 'dag3'"
          class="filter-btn text-darkblue border-2 border-darkblue transition rounded-xl cursor-pointer px-12 p-4 bg-beige"
          :class="{ 'bg-darkyellow': dagaktiv === 'dag3' }"
        >
          d. 25 juli
        </button>

        <button
          @click="dagaktiv = 'dag4'"
          class="filter-btn text-darkblue border-2 border-darkblue transition rounded-xl cursor-pointer px-12 p-4 bg-beige"
          :class="{ 'bg-darkyellow': dagaktiv === 'dag4' }"
        >
          d. 26 juli
        </button>
      </div>
      <!-- dag 1 -->
      <!-- grid til cards -->
      <div
        class="grid place-items-center grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-15 p-4 max-w-5xl mx-auto mb-20 eventcards"
        x-show="dagaktiv === 'dag1'"
      >
        <Card
          url="/singleview"
          cardimage="kridt.webp"
          cardimagealt="Kridt"
          cardtitle="Kridtmaling"
          cardtekst="kl. 09.00 // Krea"
        />
