    </div>
  </section>
  <Arrow />
</MainLayout>
<style>
  .solsikke:hover {
    animation: animate__tada;
    animation-duration: 2s;
  }
</style>
<script>
  /* Import af Motion One bibliotek */
  import { animate, inView } from "motion";
  inView(".eventcards", () => {
    animate(".eventcards", { x: [-2000, 0] }, { duration: 2 });
  });
</script>
