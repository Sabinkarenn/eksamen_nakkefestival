---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout>
    <script>
        function activateSlide(index) {
            const slides = document.querySelectorAll(".slide");

            slides.forEach((slide, i) => {
                slide.classList.remove("active");
                slide.style.order = i === index ? "-1" : i + 1;
            });

            slides[index].classList.add("active");
        }

        if (typeof window !== "undefined") {
            document.addEventListener("DOMContentLoaded", () => {
                const slides = document.querySelectorAll(".slide");
                slides.forEach((slide, index) => {
                    slide.addEventListener("click", () => activateSlide(index));
                });

                // Start med første slide aktiv
                activateSlide(0);
            });
        }
    </script>

    <ul class="flex w-full h-[700px] overflow-hidden p-0 m-0 rounded-lg">
        <li
            class="slide order-1 flex-shrink-0 w-[5%] relative bg-darkyellow cursor-pointer transition-all duration-500 ease-in-out border-2 border-darkblue"
        >
            <span
                class="absolute rotate-90 top-18 left-[-144%] text-lg font-bold text-darkblue whitespace-nowrap"
            >
                Om Nakkefestival
            </span>
            <div
                class="slide-content opacity-0 invisible transition-opacity duration-500 max-w-[915px] p-10 text-darkblue"
            >
                <h2 class="text-2xl font-bold mb-4">Om Nakkefestival</h2>
                <p>
                    Nakkefestival er en uafhængig og non-profit festival med
                    fokus på musik, fællesskab og bæredygtighed.
                </p>
            </div>
        </li>

        <li
            class="slide order-2 flex-shrink-0 w-[5%] relative bg-yellow cursor-pointer transition-all duration-500 ease-in-out border-2 border-darkblue"
        >
            <span
                class="absolute rotate-90 top-13 left-[-55%] text-lg font-bold text-darkblue whitespace-nowrap"
            >
                Praktisk info
            </span>
            <div
                class="slide-content opacity-0 invisible transition-opacity duration-500 max-w-[915px] p-10 text-darkblue"
            >
                <h2 class="text-2xl font-bold mb-4">Praktisk info</h2>
                <p>
                    Festivalen åbner torsdag kl. 12. Medbring billet, ID og eget
                    krus. Der er gratis vandposter og madboder.
                </p>
            </div>
        </li>

        <li
            class="slide order-3 flex-shrink-0 w-[5%] relative bg-pink cursor-pointer transition-all duration-500 ease-in-out border-2 border-darkblue"
        >
            <span
                class="absolute rotate-90 top-8 left-[-40%] text-lg font-bold text-darkblue whitespace-nowrap"
            >
                Find vej
            </span>
            <div
                class="slide-content opacity-0 invisible transition-opacity duration-500 max-w-[915px] p-10 text-darkblue"
            >
                <h2 class="text-2xl font-bold mb-4">Find vej</h2>
                <p>
                    Festivalen ligger på Nakke Hage. Tag tog til Nykøbing Sj. og
                    derefter bus eller samkørsel.
                </p>
            </div>
        </li>
    </ul>
</MainLayout>

<style>
    .slide.active {
        width: 90% !important;
    }

    .slide.active .slide-content {
        opacity: 1 !important;
        visibility: visible !important;
    }
</style>
