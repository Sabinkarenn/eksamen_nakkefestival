---
import MainLayout from "../layouts/MainLayout.astro";
import Kunstnercard from "../components/Kunstnercard.astro";
import Button from "../components/Button.astro";
import Link from "../components/Link.astro";
import { Image } from "astro:assets";
import thumbsup from "../assets/images/thumbsup.png";
---

<MainLayout>
  <div x-data="{ dagaktiv: 'dag1' }">
    <h1 class="text-3xl font-bold">Tidsplan</h1>
    <p class="py-6">Her kan du se tidsplanen for festivalen.</p>
    <p class="py-6">Tryk p√• knapperne for at skifte mellem dagene.</p>
    <h2>tidsplan</h2>
    <button @click="dagaktiv = 'dag1'">d. 23 juli</button>
    <button @click="dagaktiv = 'dag2'">d. 24 juli</button>
    <button @click="dagaktiv = 'dag3'">d. 25 juli</button>
    <button @click="dagaktiv = 'dag4'">d. 26 juli</button>

    <div class="grid grid-cols-3 max-w-xl" x-show="dagaktiv === 'dag1'">
      <div><div>tid</div><div>10</div><div>12</div></div>
      <div><div>scene 1</div><div>band 1</div><div>band2</div></div>
      <div><div>scene 2</div><div>-</div><div>band 3</div></div>
    </div>

    <div class="grid grid-cols-3 max-w-xl" x-show="dagaktiv === 'dag2'">
      <div><div class="font-bold">tid</div><div>10</div><div>12</div></div>
      <div><div>scene 1</div><div>band 1</div><div>band2</div></div>
      <div><div>scene 2</div><div>-</div><div>band 3</div></div>
    </div>

    <div class="grid grid-cols-3 max-w-xl" x-show="dagaktiv === 'dag3'">
      <div><div class="font-bold">tid</div><div>10</div><div>12</div></div>
      <div><div>scene 1</div><div>band 6</div><div>band 9</div></div>
      <div><div>scene 2</div><div>-</div><div>band 7</div></div>
    </div>

    <div class="grid grid-cols-3 max-w-xl" x-show="dagaktiv === 'dag4'">
      <div><div>tid</div><div>10</div><div>12</div></div>
      <div><div>scene 1</div><div>band 12</div><div>band223</div></div>
      <div><div>scene 2</div><div>-</div><div>band 323</div></div>
    </div>
  </div>
</MainLayout>
