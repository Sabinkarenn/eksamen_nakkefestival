      carddato="23. juli"
      cardtidspunkt="10:00"
    />
    <Kunstnercard
      cardimage="josie.png"
      cardimagealt="becca"
      cardtitle="BECCA"
      cardscene="DEN ANDEN SCENE"
      cardkategori="POP"
      carddato="23. juli"
      cardtidspunkt="12:00"
    />
    <Kunstnercard
      cardimage="josie.png"
      cardimagealt="uma kabongo"
      cardtitle="UMA KABONGO"
      cardscene="DEN ENE SCENE"
      cardkategori="RAP"
      carddato="23. juli"
      cardtidspunkt="14:00"
    />
    <Kunstnercard
      cardimage="josie.png"
      cardimagealt="adlyd"
      cardtitle="ADLYD"
      cardscene="DEN ANDEN SCENE"
      cardkategori="PUNK"
      carddato="23. juli"
      cardtidspunkt="16:00"
    />
    <Kunstnercard
      cardimage="josie.png"
      cardimagealt="adam"
      cardtitle="ADAM"
      cardscene="DEN ENE SCENE"
      cardkategori="RAP"
      carddato="23. juli"
      cardtidspunkt="18:00"
    />
