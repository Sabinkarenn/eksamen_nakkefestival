---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Link from "../components/Link.astro";
import { Image } from "astro:assets";
import Banner from "../components/Banner.astro";

import Hero from "../components/Hero.astro";
import Form from "../components/Form.astro";
import Timebanner from "../components/Timebanner.astro";
import Galleri from "../components/Galleri.astro";
import Kunstnercard from "../components/Kunstnercard.astro";
---

<MainLayout title="Nakkefestival">
  <!-- Hero section -->

  <Hero />

  <li>
    <a href="/købbillet" class="underline hover:text-orange">Køb billet</a>
  </li>

  <!-- Første sektion med logo -->

  <h1>Nakkefestival</h1>
  <section class="flex mb-15">
    <div>
      <h2>Musik, kunst og kærlighed</h2>
    </div>
    <div><img src="/logo.svg" alt="Logo" class="w-120 h-120" /></div>
  </section>

  <!-- Årets kunster sektion -->
  <section class="mb-15">
    <h3 class="text-center">Årets kunstnere</h3>
  </section>

  <!-- Nedtæller sektion -->
  <section class="mb-30">
    <h3 class="text-center">Nakkefestival starter om</h3>
    <Timebanner />
  </section>

  <!-- banner sektion -->
  <section class="mb-15">
    <Banner />
  </section>
  <!-- SoMe sektion -->
  <section class="mb-15">
    <h3 class="text-center">Se mere til Nakkefestival</h3>
  </section>
  <!-- Galleri start -->
  <section>
    <Galleri />
  </section>
</MainLayout>
