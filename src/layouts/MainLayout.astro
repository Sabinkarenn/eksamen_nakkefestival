---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/tailwind.css";
import "animate.css";
const { title } = Astro.props;
import Hero from "../components/Hero.astro";
import Link from "../components/Link.astro";
---

<html lang="da">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{Astro.props.title}</title>
    <link
      rel="icon"
      type="../assets/images/guitar-favicon.png"
      href="/logo.svg"
    />
  </head>

  <body class="relative min-h-screen bg-beige">
    <header class="bg-transparent relative z-20">
      <Header />
    </header>

    <main class="px-10 md:px-30">
      <div
        class="progress-bar h-4 fixed w-full bg-gradient-to-r from-yellow to-orange left-0 origin-top-left top-0 right-0 z-20"
      >
      </div>
      <!-- Køb billet sticky start -->
      <div id="ctaknaptrigger"></div>
      <div
        class="fixed top-70 -right-10 transform rotate-270 rounded-full z-50 opacity-0"
        id="ctaknap"
      >
        <Link href="/købbillet" size="large" variant="primary">Køb billet</Link>
      </div>
      <!-- Køb billet sticky slut -->
      <div class="relative z-10">
        <slot />
      </div>
    </main>

    <footer class="relative z-10">
      <Footer />
    </footer>
  </body>
</html>

<script>
  /* Import af Motion One bibliotek */
  import { animate, scroll } from "motion";
  scroll(animate(".progress-bar", { scaleX: [0, 1] }));
</script>
