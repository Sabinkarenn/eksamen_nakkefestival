---
import { Image } from "astro:assets";
import Link from "./Link.astro";
import hero from "../assets/images/heros.webp";
import lillesol from "../assets/images/lillesol.webp";
import storsol from "../assets/images/storsol.webp";
const { herotitel = "Nakkefestival" } = Astro.props;
import Heading from "./Heading.astro";
---

<section class="relative z-0">
  <div class="grid grid-cols-100 grid-rows-50 max-h-[60vh] lg:max-h-screen">
    <div class="col-start-1 col-span-35 row-start-13">
      <Image src={lillesol} alt="lille solsikke" class="place-self-center" />
    </div>

    <div class="absolute bottom-0 left-0 right-0">
      <Image src={hero} alt="hero billede" class="" />
    </div>

    <div
      class="col-start-25 col-span-50 row-start-1 relative -translate-y-20 lg:-translate-y-90"
    >
      <Image
        src={storsol}
        alt="stor solsikke"
        class="w-full rotate-animation"
      />
    </div>
    <div class="col-start-25 col-span-50 row-start-4 text-center relative">
      <Heading htmlheading="h1" size="xlarge">{herotitel}</Heading>
      <Heading htmlheading="h2" size="medium" stylingclasses="text-orange mb-6"
        >-Hvor Musik, kunst og kærlighed forenes</Heading
      >
      <Heading htmlheading="h3" size="large" stylingclasses="text-orange"
        >23-26. juli 2025</Heading
      >
    </div>
    <div class="lg:hidden col-start-44 col-span-50 row-start-30 relative">
      <Link href="/købbillet" variant="primary" size="small">Køb billet</Link>
    </div>
    <div class="hidden lg:block col-start-44 col-span-50 row-start-24 relative">
      <Link href="/købbillet" variant="primary" size="large">Køb billet</Link>
    </div>
  </div>
</section>

<style>
  .rotate-animation {
    animation: rotate 25s linear infinite;
  }

  @keyframes rotate {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  .place-self-center {
    animation: rotate-large 20s linear infinite;
  }

  @keyframes rotate-large {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }
</style>
