---
import { Image } from "astro:assets";
import galle1 from "../assets/images/galle1.webp";
import galle2 from "../assets/images/galle2.webp";
import galle3 from "../assets/images/galle3.webp";
import galle4 from "../assets/images/galle4.webp";
import galle5 from "../assets/images/galle5.webp";
import galle6 from "../assets/images/galle6.webp";
---

<section>
  <div>
    <div class="mt-4 grid lg:grid-cols-3 gap-10">
      <div>
        <img
          src="tape.webp"
          alt="Tape"
          class="absolute -mt-6 -translate-x-1/2 w-40 rotate-[352deg] z-10 left-65"
        />
        <Image
          src={galle1}
          alt="galleri 1"
          class="justify-end w-60 border-2 border-darkblue rounded-2xl place-self-center"
        />
      </div>
      <div>
        <img
          src="tape.webp"
          alt="Tape"
          class="absolute -mt-6 -translate-x-1/2 w-40 rotate-[352deg] z-10 lg:left-180 left-65"
        />
        <Image
          src={galle2}
          alt="galleri 2"
          class="lg:w-60 w-100 border-2 border-darkblue rounded-2xl place-self-center"
        />
      </div>
      <div>
        <img
          src="tape.webp"
          alt="Tape"
          class="absolute -mt-6 -translate-x-1/2 w-40 rotate-[352deg] z-10 lg:left-290 left-65"
        />
        <Image
          src={galle3}
          alt="galleri 3"
          class="w-border-2 w-60 border-darkblue rounded-2xl place-self-center"
        />
      </div>
      <div>
        <img
          src="tape.webp"
          alt="Tape"
          class="absolute -mt-6 -translate-x-1/2 w-40 rotate-[352deg] z-10 left-65"
        />
        <Image
          src={galle4}
          alt="galleri 4"
          class="w-60 border-2 border-darkblue rounded-2xl place-self-center"
        />
      </div>
      <div>
        <img
          src="tape.webp"
          alt="Tape"
          class="absolute -mt-6 -translate-x-1/2 w-40 rotate-[352deg] z-10 lg:left-180 left-65"
        />
        <Image
          src={galle5}
          alt="galleri 5"
          class="lg:w-67 w-60 border-2 border-darkblue rounded-2xl place-self-center"
        />
      </div>
      <div>
        <img
          src="tape.webp"
          alt="Tape"
          class="absolute -mt-6 -translate-x-1/2 w-40 rotate-[352deg] z-10 lg:left-290 left-65"
        />
        <Image
          src={galle6}
          alt="galleri 6"
          class="lg:w-68 w-60 border-2 border-darkblue rounded-2xl place-self-center"
        />
      </div>
    </div>
    <div class="mt-3 justify-center flex gap-3">
      <img src="/facebook.svg" alt="Facebook" class="h-10" />
      <img src="/instagram.svg" alt="Instagram" class="h-10" />
    </div>
  </div>
</section>
